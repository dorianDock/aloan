<% # encoding: utf-8   %>


<div class="ui grid">
  <div class="seven wide column"></div>
  <div class="independentElement nine wide column">
    <h1 class="customTitle"><%= t('menu.loans') %></h1>
    <a class="ui button teal" href="<%= new_loan_path %>"><i class="ui icon add"></i> <%= t('add') %> </a>
  </div>
</div>


<div class="ui grid">
  <div class="one wide column">
  </div>
  <div class="five wide column">
    <h2 class="lightMenuElement"><%= t('loans.past') %> (<%= @past_loans.count %>)</h2>
    <div class="ui divided items">
      <%- @past_loans.each do |loan| %>
          <%= render 'loans/list_element', :loan => loan %>
      <%- end %>
    </div>
  </div>
  <div class="five wide column">
    <h2 class="lightMenuElement"><%= t('loans.current') %> (<%= @current_loans.count %>)</h2>
    <div class="ui divided items">
      <%- @current_loans.each do |loan| %>
          <%= render 'loans/list_element', :loan => loan %>
      <%- end %>
    </div>
  </div>
  <div class="five wide column">
    <h2 class="lightMenuElement"><%= t('loans.future') %> (<%= @future_loans.count %>)</h2>
    <div class="ui divided items">
      <%- @future_loans.each do |loan| %>
          <%= render 'loans/list_element', :loan => loan %>
      <%- end %>
    </div>
  </div>

</div>



