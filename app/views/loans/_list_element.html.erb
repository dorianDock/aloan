

<div class="item light_item">
  <div class="ui image small_pictures_for_lists">
    <%= image_tag 'loan.png' %>
  </div>

  <div class="content">
    <a class="header" href="<%= loan_path(loan) %>"><%= loan_title(loan) %>
     <%= link_to 'Destroy', loan_path(loan), method: :delete, class: 'ui button red' %>
    </a>
    <div class="meta">
      <span><%= t('loan.description') %></span>
    </div>
    <div class="description">
      <p><%= loan.loan_goal %></p>


    </div>
    <div class="extra">
      <p><%= t('rate') %>: <%= loan.rate %></p>
      <p><%= t('amount') %>: <%= loan.amount %></p>
      <p><%= t('from') %> <%= loan.start_date.strftime('%d/%m/%Y') %> <%= t('to') %> <%= loan.contractual_end_date.strftime('%d/%m/%Y') %></p>
    </div>
  </div>
</div>