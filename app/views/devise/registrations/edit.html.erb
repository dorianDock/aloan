<div class="ui middle aligned center aligned grid">
  <div class="six wide column"></div>
  <div class="four wide column">
    <h2 class="ui dark_purple image header">

      <div class="content">
        Profile of <%= current_user.email %>
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form", method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="ui stacked segment attached">
          <div class="field">
            <label>Email</label>
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>


          <div class="field">
            <label>Password</label><i>(leave blank if you don't want to change it)</i>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="ui left icon input">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>


          <div class="field">
            <label>Password Confirmation</label>
            <div class="ui left icon input">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>

          <div class="field">
            <label>Current Password <i>(we need your current password to confirm your changes)</i></label>
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <%= f.submit 'Update', :class => 'ui fluid large teal submit button' %>
        </div>

        <div class="ui error message"></div>
    <% end %>


    <div class="ui message">

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'ui button', data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
  <div class="six wide column"></div>
</div>
