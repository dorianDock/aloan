<div class="ui middle aligned center aligned grid">
  <div class="six wide column"></div>

  <div class="four wide column">
    <h2 class="ui dark_purple image header">
      <%= image_tag('u1.png', :class => 'image') %>
      <div class="content">
        Forgot your password?
      </div>
    </h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'ui large form', method: :post }) do |f| %>
            <%= devise_error_messages! %>
        <div class="ui stacked segment">
          <div class="field">
            <label>Your Email</label>
            <div class="ui input">

              <%= f.email_field :email, autofocus: true %>

            </div>
          </div>
          <%= f.submit 'Send me reset password instructions', :class => 'ui fluid large teal submit button' %>
        </div>
        <div class="ui error message"></div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="six wide column"></div>
</div>
