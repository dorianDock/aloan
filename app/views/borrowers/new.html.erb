<% # encoding: utf-8   %>

<%= form_for @new_borrower, method: 'post', html: {:multipart => true, class: 'ui form light_form' } do |f| %>
    <% string_id=@new_borrower.id.to_s %>
    <h1>Create new borrower</h1>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <div class="fields">
      <div class="four wide field">
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <label>First Name</label>
          <%= f.text_field :first_name %>
        </div>
      </div>
      <div class="four wide field">
        <div class="field">
          <label>Birth date</label>
          <%= f.text_field  :birth_date, :class => 'borrowerBirthDate' %>
        </div>
      </div>

      <div class="four wide field">
        <div class="field">
          <label>Company Name</label>
          <%= f.text_field :company_name %>
        </div>
      </div>

      <div class="four wide field">
        <div class="field">
          <label>Amount</label>
          <%= f.text_field :amount_wished %>
        </div>
      </div>
    </div>

    <div class="field">
      <label>Project Description</label>
      <%= f.text_area :project_description %>
    </div>

    <%= f.submit 'Submit', class: 'ui primary button right floated' %>
<% end %>

